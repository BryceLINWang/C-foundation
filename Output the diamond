#include<stdlib.h>
#include <stdio.h> 
#include<string.h>              
int main()
{
	int n;
	int i, j;
	printf("输入菱形边行数：");
	scanf_s("%d",&n);
	for (i = 1; i <= n; i++)
	{
		for (j = 1; j <= n - i; j++)
		{
			printf(" ");
		}
		for (j = 1; j <= 2 * i - 1; j++)
		{
			printf("*");
		}
		printf("\n");
	}
for (i = n-1; i >= 1; i--)
	{
		for (j = 1; j <= n - i; j++)
		{
			printf(" ");
		}
		for (j = 1; j <= 2 * i - 1; j++)
		{
			printf("*");
		}
		printf("\n");
	}
    system("pause");
	return 0;
}
